<UserControl
    x:Class="WREdit.Views.ActionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WREdit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="0" Height="22" />

        <ContentControl Grid.Row="1" Margin="0,4"/>

        <DockPanel Grid.Row="2" LastChildFill="False">
            <Button
                Height="22"
                Padding="6,0"
                DockPanel.Dock="Right">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Height="16"
                        Margin="0,0,2,0"
                        Source="/Resources/tick-circle.png" />
                    <TextBlock VerticalAlignment="Center" Text="Apply" />
                </StackPanel>
            </Button>
        </DockPanel>
    </Grid>
</UserControl>
